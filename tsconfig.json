{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build/",
    "jsx": "react",
    "lib": ["es5", "es6", "es7", "esnext", "dom"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
  },
  "include": [
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules", "build"
  ],
}
